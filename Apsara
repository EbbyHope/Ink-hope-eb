import { useState } from "react";

const scenes = { start: { text: You stand in front of the sealed ritual room. The air is heavy with incense and old blood. Bhuvan’s voice still lingers in your mind.\n\n"There’s nothing wrong in opening that door…"\n\nA silver thread winds tightly around the doorknob. You reach out… but something cuts your finger. Blood trickles down., choices: [ { text: "Keep unwrapping the thread", next: "unwrap" }, { text: "Step back and ask Daksh for help", next: "askDaksh" } ] }, unwrap: { text: You ignore the pain and pull harder. The thread snaps.\n\nThe door creaks open. Inside: Dust, darkness, and a strange chill. A mirror stands in the middle—cracked, ancient.\n\nSuddenly, your reflection smiles. But you didn’t., choices: [ { text: "Touch the mirror", next: "touchMirror" }, { text: "Run back to Bhuvan", next: "runToBhuvan" } ] }, askDaksh: { text: You turn away, trembling. Daksh appears at the end of the hallway.\n\n"You opened it?" he asks, eyes wide.\n\n"Almost…"\n\nHe walks toward the door—but the hallway stretches unnaturally long. Like the house doesn't want him to reach you., choices: [ { text: "Run toward Daksh", next: "runToDaksh" }, { text: "Open the door yourself", next: "unwrap" } ] }, touchMirror: { text: Your fingers brush the mirror. It ripples like water.\n\nYou're pulled in.\n\nSuddenly you're *her*—Apsara. The scent of sandalwood, the feel of silk, the sound of chanting.\n\nBut something's wrong. You're not alone in her mind., choices: [] }, runToBhuvan: { text: You run toward Bhuvan. But he’s not where he was.\n\nThe house groans, walls shifting. Something doesn't want you to leave.\n\nAnd Bhuvan... he’s whispering. To someone who isn’t there., choices: [] }, runToDaksh: { text: You sprint down the stretching hallway, heart pounding.\n\nDaksh is fading. You scream his name.\n\nSuddenly, you're back at the door again. Blood on your hands. Alone., choices: [] } };

export default function ApsaraGame() { const [scene, setScene] = useState("start");

return ( <div className="p-4 max-w-xl mx-auto bg-black text-white min-h-screen flex flex-col justify-center items-center text-center space-y-4"> <h1 className="text-3xl font-bold text-red-500">Apsara: The Threads of Ritual</h1> <p className="text-lg whitespace-pre-line">{scenes[scene].text}</p> <div className="space-y-2"> {scenes[scene].choices.length > 0 ? ( scenes[scene].choices.map((choice, index) => ( <button key={index} onClick={() => setScene(choice.next)} className="bg-red-700 hover:bg-red-600 text-white px-4 py-2 rounded-xl shadow" > {choice.text} </button> )) ) : ( <button onClick={() => setScene("start")} className="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-xl shadow" > Restart </button> )} </div> </div> ); }

